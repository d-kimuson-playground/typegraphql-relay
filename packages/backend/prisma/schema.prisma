datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  // node_modules 以下に吐き出さないと型チェックが面倒
  provider           = "typegraphql-prisma"
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  detail      String
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
}
