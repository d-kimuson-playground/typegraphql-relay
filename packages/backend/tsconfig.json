{
  "extends": "@tsconfig/node18-strictest/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}
